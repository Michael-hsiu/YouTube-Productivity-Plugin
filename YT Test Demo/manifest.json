{
  "manifest_version": 2,

  "name": "TEST EXTENSION",
  "description": "This extension will create an alert on any YouTube page.",
  "version": "1.0",
  "permissions" : [
    "activeTab",
    "tabs"
  ],

  "browser_action": {
   "default_icon": "icon.png"
   //"default_popup": "popup.html"
  },



  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons" : {
    "64": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
      //"run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["stop.jpg"] 
}